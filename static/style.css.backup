/* Reset and base styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
}

body {
    font-family: Georgia, 'Times New Roman', Times, serif;
    line-height: 1.7;
    color: #2d2d2d;
    background-color: #ffffff;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Container */
.container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 250px 40px 100px;
    border: 5px solid lime;
}

@media (max-width: 768px) {
    .container {
        padding: 150px 20px 60px;
        max-width: 650px;
    }
}

/* Two-column layout */
.page-layout {
    display: flex;
    gap: 60px;
    align-items: flex-start;
    justify-content: center;
    max-width: 1200px;
    margin: 0 auto;
}

.content-column {
    flex: 1;
    max-width: 600px;
}

.photos-column {
    width: 280px;
    flex-shrink: 0;
    align-self: center;
}

.photos-column img {
    width: 100%;
    height: auto;
    border-radius: 4px;
    display: block;
}

@media (max-width: 900px) {
    .page-layout {
        flex-direction: column;
        gap: 30px;
    }
    
    .photos-column {
        width: 100%;
        position: static;
    }
    
    .content-column {
        max-width: 100%;
    }
}

/* Remove old intro section styles */
.intro-section {
    display: block;
}

.intro-section .headshot {
    display: none;
}

.intro-section .intro-text {
    display: block;
}

.intro-section .intro-text h1 {
    text-align: left;
}

/* Remove old headshot styles */
.headshot {
    display: none;
}

/* Typography */
h1 {
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.85rem;
    margin-top: 0;
    color: #000;
    text-align: left;
}

h2 {
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-size: 1.125rem;
    font-weight: 500;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    margin-left: 0;
    color: #000;
}

p {
    margin-bottom: 0.75rem;
    font-size: 0.9375rem;
    line-height: 1.6;
}

/* Links */
a {
    color: #2d2d2d;
    text-decoration: underline;
    text-decoration-color: rgba(0, 0, 0, 0.2);
    text-underline-offset: 2px;
    transition: text-decoration-color 0.2s ease;
}

a:hover {
    text-decoration-color: rgba(0, 0, 0, 0.6);
}

/* Lists */
ul {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    max-width: 600px;
}

li {
    margin-bottom: 0.35rem;
    line-height: 1.6;
    font-size: 0.9375rem;
}

li:last-child {
    margin-bottom: 0;
}

ul {
    list-style-type: disc;
}

li::marker {
    color: #666;
}

/* Responsive adjustments */
@media (max-width: 480px) {
    html {
        font-size: 16px;
    }
    
    h1 {
        font-size: 1.75rem;
    }
    
    h2 {
        font-size: 1.125rem;
    }
    
    p {
        font-size: 1.0625rem;
    }
    
    .headshot img {
        width: 110px;
        height: 110px;
    }
}

/* Selection */
::selection {
    background-color: #e6f3ff;
    color: #000;
}
